<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/proximanova_bold</item>

    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/FieryRose</item>
    </style>

    <style name="chipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/proximanova_bold</item>

    </style>

    <style name="customChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="android:textAppearance">@style/chipTextAppearance</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:textAlignment">center</item>
        <item name="chipBackgroundColor">@android:color/white</item>
        <item name="chipMinHeight">50dp</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipCornerRadius">30dp</item>
    </style>


</resources>
